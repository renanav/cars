<h1> Here will be 3 makes of a certain category </h1>

<!-- this will display a different background for each category (can be used also for makes and models), this one should eventually
be in the category helper -->
<!-- // ADJUST THE SIZE OF THE IMAGES TO THE SCREEN -->
<% case @cat.id %>
  <% when 1 %>
  <body id="case-1-background">
  <% when 2 %>
  <body id="case-2-background">
  <% when 3 %>
  <body id="case-3-background">
  <% when 4 %>
  <body id="case-4-background">
<% end %>




<div class="make-selector">
    <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
              <% @remove_dup.each do |make| %>
                <li><%=link_to make.name.capitalize, make_index_path(make_name: make.name) %></li>
              <% end %>
            </ul>
        </div>
        <!-- /.navbar-collapse -->
    </div>
    <!-- /.container -->
</div>
