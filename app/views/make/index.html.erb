<!-- Present a different background for each chosen make's body page -->
<% case @make.name %>
  <% when "Audi" %>
    <body class="make-background" id="audi-background">
  <% when "Mercedes" %>
    <body class="make-background" id="mercedes-background">
  <% when "Lexus" %>
    <body class="make-background" id="lexus-background">
  <% when "Land Rover" %>
    <body class="make-background" id="land-rover-background">
  <% when "Bmw" %>
    <body class="make-background" id="bmw-background">
  <% when "Porsche" %>
    <body class="make-background" id="porsche-background">
  <% when "Ferrari" %>
    <body class="make-background" id="ferrari-background">
  <% when "Lamborghini" %>
    <body class="make-background" id="lamborghini-background">
  <% when "Bugatti" %>
    <body class="make-background" id="bugatti-background">
  <% when "Rolls Roys" %>
    <body class="make-background" id="rolls-roys-background">
  <% when "Bentley" %>
    <body class="make-background" id="bentley-background">
  <% when "Aston Martin" %>
    <body class="make-background" id="aston-martin-background">

<% end %>


